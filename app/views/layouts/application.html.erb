<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <div class="wrapper">
        <%= render "shared/menu" %>

        <% if notice.present? %>
          <div class="notice" id="notification-bar" name="notification-notice">
            <p> <%= notice %> </p>
          </div>
        <% end %>
        <% if alert.present? %>
          <div class="alert">
            <p> <%= alert %> </p>
          </div>
        <% end %>

        <main class="main">
          <%= yield %>
        </main>

        <%= render "shared/left_sidebar" %>
    </div>
  </body>
</html>
