<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          
          <% if user.id != current_user.id %>
            <span> | </span>
            <%= link_to  "Add friend", friendships_path(friend_id: @user, user_id: current_user), method: 'post', class: 'profile-link' %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
