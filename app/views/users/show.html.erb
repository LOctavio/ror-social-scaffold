<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>

  <%= link_to  "Add friend", friendships_path(friend_id: @user, user_id: current_user), method: 'post' %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
